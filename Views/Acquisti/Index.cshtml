@model IEnumerable<Purchase>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.prodotto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.quantita)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prezzo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.prodotto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quantita)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prezzo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PurchaseId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PurchaseId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PurchaseId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
